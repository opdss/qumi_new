{% extends "layout.twig" %}

{% block container %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 login">
                <div class="login-form">
                    <form method="post" action="{{ path_for('login') }}" class="form-horizontal" id="hasPwd">
                        <div class="title text-center">
                            <h3>趣米 - 登录</h3>
                        </div>
                        <hr/>
                        {% if errorMsg %}
                        <div class="alert alert-danger">
                            {{ errorMsg }}
                        </div>
                        {% endif %}
                        <div>
                            <div class="form-group">
                                <label for="email" class="col-md-3 control-label">用户名</label>
                                <div class="col-md-9">
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="{{ email }}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="col-md-3 control-label">密码</label>
                                <div class="col-md-9">
                                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" value="{{ password }}">
                                </div>
                            </div>
                            <input type="hidden" name="_form" value="{{ _form }}">
                            <input type="hidden" name="redirect_url" value="{{ redirect_url }}">
                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-9 text-right" style="line-height: 34px">
                                    <button type="submit" class="btn btn-primary" style="float: left">登录</button>
                                    <a href="{{ path_for('register') }}"><i class="fa fa-external-link"></i> 注册</a>
                                    <a href="{{ path_for('forgot') }}"><i class="fa fa-lock"></i> 忘记密码</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
