{% extends 'console.twig' %}

{% block console %}
    <div class="row">
        <div class="col-md-12">
            <div>
                <div class="opts">
                    <form class="form-inline" method="get" id="filter_form">
                        <div class="form-group">
                            <input type="text" class="form-control" name="kw" placeholder="搜索关键词" value="{{ filter.kw }}">
                        </div>

                        <div class="input-group col-md-2 date"  id="start-date">
                            <input type='text' class="form-control" name="start_date" placeholder="开始日期" value="{{ filter.start_date }}"/>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-time"></span>
                            </span>
                        </div>

                        <div class="input-group col-md-2 date" id="end-date" >
                            <input type='text' class="form-control" name="end_date" placeholder="结束日期" value="{{ filter.end_date }}"/>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-time"></span>
                            </span>
                        </div>
                        <button type="submit" class="btn btn-primary">查询</button>
                        <a href="{{ path_for('statistic.logs') }}" class="btn btn-info">全部访问记录</a>
                    </form>
                </div>
                <div class="table text-center">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <td class="text-left">
                                <a href="javascript:void(0)"
                                   class="order_by"
                                   data-order_name="domain_name"
                                   data-val="{{ filter.order_by.domain_name ? (filter.order_by.domain_name == 'asc' ? 'desc' : 'asc') : 'desc'}}">
                                    域名
                                    <span class="glyphicon glyphicon-sort"></span>
                                </a>
                            </td>
                            <td>
                                <a href="javascript:void(0)"
                                   class="order_by"
                                   data-order_name="pv"
                                   data-val="{{ filter.order_by.pv ? (filter.order_by.pv == 'asc' ? 'desc' : 'asc') : 'desc'}}">
                                    PV
                                    <span class="glyphicon glyphicon-sort"></span>
                                </a>
                            </td>
                            <td>
                                <a href="javascript:void(0)"
                                   class="order_by"
                                   data-order_name="ip"
                                   data-val="{{ filter.order_by.ip ? (filter.order_by.ip == 'asc' ? 'desc' : 'asc') : 'desc'}}">
                                    IP
                                    <span class="glyphicon glyphicon-sort"></span>
                                </a>
                            </td>
                            <td>
                                <a href="javascript:void(0)"
                                   class="order_by"
                                   data-order_name="bot"
                                   data-val="{{ filter.order_by.bot ? (filter.order_by.bot == 'asc' ? 'desc' : 'asc') : 'desc'}}">
                                    搜索引擎
                                    <span class="glyphicon glyphicon-sort"></span>
                                </a>
                            </td>
                            <td>
                                <a href="javascript:void(0)"
                                   class="order_by"
                                   data-order_name="user"
                                   data-val="{{ filter.order_by.user ? (filter.order_by.user == 'asc' ? 'desc' : 'asc') : 'desc'}}">
                                    自然用户
                                    <span class="glyphicon glyphicon-sort"></span>
                                </a>
                            </td>
                            <td>
                                <a href="javascript:void(0)"
                                   class="order_by"
                                   data-order_name="domestic"
                                   data-val="{{ filter.order_by.domestic ? (filter.order_by.domestic == 'asc' ? 'desc' : 'asc') : 'desc'}}">
                                    国内用户
                                    <span class="glyphicon glyphicon-sort"></span>
                                </a>
                            </td>
                            <td>
                                <a href="javascript:void(0)"
                                   class="order_by"
                                   data-order_name="overseas"
                                   data-val="{{ filter.order_by.overseas ? (filter.order_by.overseas == 'asc' ? 'desc' : 'asc') : 'desc'}}">
                                    海外用户
                                    <span class="glyphicon glyphicon-sort"></span>
                                </a></td>
                            <td>日期</td>
                        </tr>
                        </thead>
                        <tbody>

                        {% for item in records %}
                            <tr>
                                <td class="text-left"><a href="{{ path_for('statistic.logs') }}?domain_id={{ item.domain_id }}" target="_blank">{{ item.domain_name }}</a></td>
                                <td>{{ item.pv }}</td>
                                <td>{{ item.ip }}</td>
                                <td>{{ item.bot }}</td>
                                <td>{{ item.user }}</td>
                                <td>{{ item.domestic }}</td>
                                <td>{{ item.overseas }}</td>
                                <td>{{ item.day }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-md-12 text-center">
                            {{ pagination|raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script type="text/javascript">
        var dateCfg = {
            language: 'zh-CN',
            weekStart: 1,
            format: 'yyyy-mm-dd',
            autoclose: 1,
            todayHighlight: 1,
            minView : 2,
            endDate : new Date()
        };
        $('#start-date').datetimepicker(dateCfg);
        $('#end-date').datetimepicker(dateCfg);
        $("#start-date").on("changeDate", function (e) {
            $('#end-date').datetimepicker('setStartDate', e.date);
        });
        $("#end-date").on("changeDate", function (e) {
            $('#start-date').datetimepicker('setEndDate', e.date);
        });
    </script>
{% endblock %}