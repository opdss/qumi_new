<div id="carousel-index" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    {% set def = carousel.cfg.default ? carousel.cfg.default : 1 %}
    {% set target = carousel.cfg.target ? carousel.cfg.target : '' %}
    {% set height =  carousel.cfg.height ? carousel.cfg.height : '400px' %}
    {% set width =  carousel.cfg.width ? carousel.cfg.width : '100%' %}
    <ol class="carousel-indicators">
        {% for x in carousel.records %}
        <li data-target="#carousel-index" data-slide-to="{{ loop.index-1 }}" class="{{ def == loop.index ? 'active' : '' }}"></li>
        {% endfor %}
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        {% for x in carousel.records %}
            <div class="item {{ def == loop.index ? 'active' : '' }}">
                <a href="{{ x.url ? x.url : '#' }}" target="{{ x.url ? target : '' }}"><img src="{{ x.image }}" alt="{{ x.title }}" title="{{ x.title }}" style="height: {{ height }};width: {{ width }}"></a>
                <div class="carousel-caption">
                    {{ x.description }}
                </div>
            </div>
        {% endfor %}
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-index" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-index" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>