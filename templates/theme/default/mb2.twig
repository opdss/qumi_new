<div class="container">
    <div class="row" style="min-height:640px">
        {% for x in records %}
            <div class="col-md-3">
                <div class="box-domain">
                    <a class="domain" href="http://{{ x.name }}" target="_blank">{{ x.uc_name }}</a>
                    {% if x.description %}
                        <div class="description">
                            {{ x.description }}
                        </div>
                    {% endif %}
                    <div  class="price">
                        {% if x.sale_type %}询价{% else %}¥ {{ lang(1013)~x.price }}{% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="row text-center">
        {{ pagination | raw }}
    </div>
</div>

<footer>
    <p class="text-muted">©2018 <a href="https://Qumi.app">Qumi. </a>All rights reserved. | .app域名的专属停靠站  </p>
</footer>

<script src="https://cdn.bootcss.com/jquery/1.12.4/jquery.min.js"></script>
<script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
